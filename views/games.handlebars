    <div class="container-fluid row my-container m-0 p-1">
      <!-- container 1 -->
      {{> private-navbar}}

      <!-- container 2 -->
      <div
        class="col-lg-10 d-flex justify-content-center flex-column col-sm-12"
      >
        <div class="row container m-2 d-flex justify-content-around">
          <!-- game cover art -->
          <div class="col-lg-2 d-flex justify-content-center">
            <img
              src="../assets/img/341CCFC6-09BB-4267-8556-D000BF219458.JPG"
              alt=""
              width="150px"
            />
          </div>
          <!-- game description -->
          <div class="col-lg-8">
            <!-- game name -->
            <div class="mt-2">
              <h5>Game title</h5>
              Cat attack
            </div>
            <!-- summary -->
            <div class="mt-2">
              <h5>Summary</h5>
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Nihil,
              necessitatibus. Assumenda expedita eos vero dicta est sit, rem
              quam veritatis quod nostrum et magni harum laboriosam dolores nemo
              incidunt sequi.
            </div>
            <!-- platform/genre/release date -->
            <div class="mt-2">
              <h5>Platform/Genre/Release date</h5>
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Eligendi
              nostrum fugiat hic, similique officiis laborum aspernatur quos
              perferendis ut placeat, et voluptas. Consequuntur, laboriosam
              architecto? Dolores placeat voluptas assumenda sit!
            </div>
          </div>
          <!-- screenshots carousel -->
          <div class="col-lg-2 d-flex justify-content-center">
            <div
              id="carouselExampleCaptions"
              class="carousel slide"
              data-bs-ride="carousel"
            >
              <div class="carousel-indicators">
                <button
                  type="button"
                  data-bs-target="#carouselExampleCaptions"
                  data-bs-slide-to="0"
                  class="active"
                  aria-current="true"
                  aria-label="Slide 1"
                ></button>
                <button
                  type="button"
                  data-bs-target="#carouselExampleCaptions"
                  data-bs-slide-to="1"
                  aria-label="Slide 2"
                ></button>
                <button
                  type="button"
                  data-bs-target="#carouselExampleCaptions"
                  data-bs-slide-to="2"
                  aria-label="Slide 3"
                ></button>
              </div>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img
                    src="../assets/img/341CCFC6-09BB-4267-8556-D000BF219458.JPG"
                    class="d-block w-100"
                    alt="..."
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="../assets/img/46321097-885E-44BA-9976-819DCD38DA1C.JPG"
                    class="d-block w-100"
                    alt="..."
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="../assets/img/60F115F4-C2F7-41C7-A3CB-B8BD2B51A975.JPG"
                    class="d-block w-100"
                    alt="..."
                  />
                </div>
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExampleCaptions"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExampleCaptions"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
        </div>
        <!-- comments -->
        {{> comments}}
      </div>
    </div>